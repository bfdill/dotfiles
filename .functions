function proxy() {
  if [ -z "$http_proxy" ]; then
    local username="ja39866"
    echo -n "password: "
    read -es password
    local pre="$username:$password@"

    SERVER=proxy.kroger.com
    PORT=3128
    export http_proxy="http://$pre$SERVER:$PORT/"
    export https_proxy=$http_proxy
    export ftp_proxy=$http_proxy
    export rsync_proxy=$http_proxy
    export HTTP_PROXY=$http_proxy
    export HTTPS_PROXY=$http_proxy
    export FTP_PROXY=$http_proxy
    export RSYNC_PROXY=$http_proxy
    echo -e "Proxy environment variables set."

  else
    unset http_proxy
    unset https_proxy
    unset ftp_proxy
    unset rsync_proxy
    unset HTTP_PROXY
    unset HTTPS_PROXY
    unset FTP_PROXY
    unset RSYNC_PROXY
    echo -e "Proxy environment variables removed."
  fi
}
# Create a new directory and enter it
function mkd() {
  mkdir -p "$@" && cd "$_";
}

hist(){
  grep -r "$@" ~/.history
    history | grep "$@"
}

_not_inside_tmux(){
  [[ -z "$TMUX"  ]]
}

ensure_tmux_is_running() {
  if _not_inside_tmux; then
    tat
    fi
}

conflicted() {
  vim +Conflicted
}

docker-office() {
  docker-machine stop home
  docker-machine start office
  eval $(docker-machine env --no-proxy office)
}

docker-home() {
  docker-machine stop office
  docker-machine start home
  eval $(docker-machine env home)
}
