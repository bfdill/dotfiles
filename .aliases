alias clone='github-clone'

alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package"
alias bcon="b console"
alias dc='docker-compose'
alias dm="docker-machine"
alias reload!='. ~/.bashrc'
alias rlogs="tail -f log/development.log"
alias rcon="rails console"
alias routegrep="rake routes | grep "
alias vim="mvim -v -N"

# grc overides for ls
#   Made possible through contributions from generous benefactors like
#   `brew install coreutils`
if $(gls &>/dev/null)
then
  alias ls="gls -F --color"
  alias l="gls -lAh --color"
  alias ll="gls -l --color"
  alias la='gls -A --color'
fi
