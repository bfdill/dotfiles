if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
export TERM='gnome-256color';
elif infocmp xterm-256color >/dev/null 2>&1; then
export TERM='xterm-256color';
fi;

bold='';
reset="\e[0m";
black="\e[1;30m";
blue="\e[1;34m";
cyan="\e[1;36m";
green="\e[1;32m";
orange="\e[1;33m";
purple="\e[1;35m";
red="\e[1;31m";
violet="\e[1;35m";
white="\e[1;37m";
yellow="\e[1;33m";

proxy_status() {
  if env | grep -q ^HTTP_PROXY=
    then 
      echo -e "PROXY" 
      fi
}

prompt_git() {
  local s='';

  if ! $(git diff --quiet --ignore-submodules --cached); then
    s+='*';
  fi;

  if [ -n "$(git ls-files --others --exclude-standard)" ]; then
    s+='*';
  fi;

  [ -n "${s}" ] && s=" [${s}]";

  echo -e "${1}${s}";
}

parse_git_dirty() {
  [[ $(git status --porcelain 2> /dev/null | tail -n1) != "" ]] && echo "(*)"
}

PS1="\[\033]0;\w\007\]";
PS1+="\[${bold}\]\n"; # newline
PS1+="\[${red}\]\$(proxy_status)"; # proxy status
PS1+="\[${orange}\] \W"; # working directory
PS1+="\[${green}\] \$(git rev-parse --abbrev-ref HEAD 2> /dev/null)";
PS1+="\[${violet}\] \$(git rev-parse --short HEAD 2> /dev/null)";
PS1+="\[${red}\] \$(parse_git_dirty)";
PS1+="\n";
PS1+="\[${white}\]\$ \[${reset}\]"; # `$` (and reset color)
export PS1;

PS2="\[${yellow}\]â†’ \[${reset}\]";
export PS2;
